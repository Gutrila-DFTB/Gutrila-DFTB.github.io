---
import ExperienceItem from "./ExperienceItem.astro";
import Heading from "../ui/Heading.astro";
import { Icon } from "astro-icon/components";

const EXPERIENCE = [
  {
    date: "Jun 2023 - Present",
    title: "Quality Data Analyst & Business Intelligence",
    company: "Teleperformance",
    description:
      "Monitored over 250 interactions monthly to ensure quality compliance.",
      "Designed performance reports that contributed to a 15% reduction in critical error recurrence.",
      "Led coaching sessions with service teams to improve key metrics such as FCR and CSAT.",
      "Identified error trends through root cause analysis and data analysis, supporting operational decisions throughout the business.",
  },
  {
    date: "Mar 2023 - Jun 2023",
    title: "Bilingual Customer Service Agent (B2+)",
    company: "Teleperformance",
    description:
      "I provided bilingual support (English/Spanish) to international customers, switching between Voice, Chat and Mails, maintaining a satisfaction rate above 87%.",
  },
  {
    date: "Dec 2022 - Mar 2023",
    title: "Transfer Process Support",
    company: "Teleperformance",
    description:
      "I supported internal transitions and adapted to operational changes.",
  },
  {
    date: "Aug 2021 - Dec 2022",
    title: "Customer Service Representative",
    company: "Teleperformance",
    description:
      "I consistently ranked in the top 10% for customer service performance and resolution efficiency, always reaching the pertinent targets.",
  },
  {
    date: "2020 - 2022",
    title: "Administrative Assistant (Internship)",
    company: "Local School - Nueva Generaci√≥n Altamira",
    description:
      "I Supported document management, phone service, and scheduling coordination..",
  },
];
---

<section class="py-8 px-8 max-md:py-4 mb-4 scroll-m-16" id="experience">
  <div class="flex flex-col pt-8 max-w-4xl mx-auto">
    <div class="flex gap-4 items-center justify-center">
      <Icon class="text-3xl dark:text-white text-blacktext" name="briefcase" />
      <Heading text="Work" textGradient="Experience" level={2} />
    </div>

    <div class="relative max-md:mt-0 mt-8" aria-label="Professional experience">
      <ol class="relative mt-10">
        {
          EXPERIENCE.map((experience, index) => (
            <li>
              <article
                role="article"
                aria-labelledby={`experience-title-${index}`}
              >
                <div
                  class="flex flex-col gap-2  text-zinc-00 dark:text-zinc-300 md:col-span-3"
                  aria-describedby={`experience-title-${index}`}
                >
                  <ExperienceItem {...experience} />
                </div>
              </article>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
